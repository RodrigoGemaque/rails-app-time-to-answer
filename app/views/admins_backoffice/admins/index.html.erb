<%if flash[:notice]%>
  <div class = "alert alert-success" role "alert">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <%=flash[:notice]%>
  </div>
<%end%> 


<div class="container-fluid">
    <div class="row mb-6">
      <h2><%=t('messages.listing', model: @admins.model_name.human(count: 2))%></h2>

    </div>    
  </div>

<div class="card-body table-responsive p-0">
<table class="table table-hover text-nowrap">
    <thead>
      <tr>
        <th>ID</th>
        <th><%= translate_attribute(@admins,:email)%></th>
        
        <th>
          <%=link_to new_admins_backoffice_admin_path, class: 'btn btn-success btn-circle' do%>
          <i class="fa fa-plus"></i> Novo
          <%end%>
        </th>

      </tr>
    </thead>
      <tbody>
        
        <% @admins.each do |admin|%>
            <tr>
              <td><%=admin.id%></td>
              <td><%=admin.email%></td>
              
              <td>        
                  <%=link_to edit_admins_backoffice_admin_path(admin.id), class: 'btn btn-primary' do%>
                    <i class="fas fa-edit"></i> Edit
                  <%end%>
              </td>

              <td>
                <%=link_to admins_backoffice_admin_path(admin.id),method: :delete, class: 'btn btn-danger',data:{confirm: t('messages.confirm_with', item: admin.email.truncate(15))} do%>
                  <i class="fas fa-trash"></i> Del
                <%end%>
              </td>

            </tr>
          <%end%>   
      </tbody>
  </table>

    <div class = "d-flex justify-content-center"> 
    <%= paginate @admins %>
  </div>

</div




