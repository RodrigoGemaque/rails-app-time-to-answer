<%if flash[:notice]%>
  <div class = "alert alert-success" role "alert">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <%=flash[:notice]%>
  </div>
<%end%> 


<div class="container-fluid">
    <div class="row mb-6">
      <h2>Lista de Perguntas</h2>
    </div>    
  </div>

<div class="card-body table-responsive p-0">
<table class="table table-hover text-nowrap">
    <thead>
      <tr>
        <th>ID</th>
        <th>Descricao</th>
        <th>Assunto</th>
        
        <th>
          <%=link_to new_admins_backoffice_question_path, class: 'btn btn-success btn-circle' do%>
          <i class="fa fa-plus"></i> Novo
          <%end%>
        </th>

      </tr>
    </thead>
      <tbody>
        
        <% @questions.each do |question|%>
            <tr>
              <td><%=question.id%></td>
              <td><%=question.description.truncate(50)%></td>
              <td><%=question.subject.description.truncate(30)%></td>

              
              <td>        
                  <%=link_to edit_admins_backoffice_question_path(question.id), class: 'btn btn-primary' do%>
                    <i class="fas fa-edit"></i> Edit
                  <%end%>
              </td>

              <td>
                <%=link_to admins_backoffice_question_path(question.id),method: :delete, class: 'btn btn-danger',data:{confirm:"Deseja realmente excluir essa pergunta?"} do%>
                  <i class="fas fa-trash"></i> Del
                <%end%>
              </td>

            </tr>
          <%end%>   
      </tbody>
  </table>

    <%= paginate @questions %>
 

</div




